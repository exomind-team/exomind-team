{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ExoBuffer",
  "version": "0.1.0",
  "identifier": "com.exomind.exobuffer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "ExoBuffer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/icon.svg",
      "icons/icon.ico"
    ],
    "android": {
      "permissions": [
        "internet",
        "access_network_state"
      ]
    }
  }
}
